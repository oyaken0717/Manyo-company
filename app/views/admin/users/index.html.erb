<table>
  <tr>
    <th>名前</th>
    <th>メール</th>
    <th>admin</th>
    <th>タスク数</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name%></td>
    <td><%= user.email %></td>
    <td><%= user.admin? ? 'あり' : 'なし' %></td>
    <td><%= user.tasks.size %></td>
    <td><%= link_to "仕事一覧", admin_user_path(user.id), class: "btn btn-primary"%></td>
    <td><%= link_to "編集", edit_admin_user_path(user.id), class: "btn btn-primary"%></td>
    <td><%= link_to "削除", admin_user_path(user.id), method: :delete, data: {confirm: "本当に削除してもいいですか？"}, class: "btn btn-primary" %></td>
  </tr>
  <% end %>
</table>
<% Label.all.each do |label| %>
  <%= label.name %>
  <%= link_to "削除", label_path(label.id), method: :delete, data: {confirm: "本当に削除してもいいですか？"} %>
<% end %>

<%= form_with(model: @label, local: true, url: labels_path) do |f| %>
<%# link_to "リンク名", アクション名_コントローラー名_path(受け渡したい変数の名前)
link_to "リンク名", new_report_path(@report) %>
  <%= f.label :タグ名 %><br>
  <%= f.text_field :name %><br>
  <%= f.submit "登録" %><br>
<% end %>

