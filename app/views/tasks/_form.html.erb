<%= form_with(model: @task, local: true, url: choose_new_or_edit) do |f|%>
  <% if @task.errors.any? %>
    <h2><%= @task.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :仕事名 %><br>
  <%= f.text_field :title %><br>
  <%= f.label :仕事内容　%><br>
  <%= f.text_field :content %><br>
  <%= f.label :終了期限 %><br>
  <%= f.date_field :deadline %><br>
  <%= f.label :進捗 %><br>
  <%= f.select(:status,['未着手', '着手中', '完了']) %><br>
  <%= f.label :順位 %><br>
  <%= f.select(:priority,Task.priorities.keys) %><br>

  <% Label.all.each do |label| %>
    <%= f.check_box :label_ids, {multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false}, label[:id] %>
    <label style = "background-color: aquamarine"><%= label.name %></label>
  <% end %><br>

  <%= f.submit %><br>
<% end %>
